<%= form_with(model: [@list, @task], local: true) do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description, require: true %>
  <%= f.label :due_date %>
  <%= f.text_field :due_date %>
  <%= f.label :priority %>
  <%= f.number_field :priority, min: 1, max: @list.tasks.length, value: @list.tasks.length %>
  <%= f.submit %>
<% end %>